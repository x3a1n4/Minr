@using teraRabbitsTools

@if selectionPosition == 0
    @var selection = teraRabbitsUtils::Selection()
    @var selection.addBlockToSelection(targetBlock.getLocation())
    @var selectionPosition = 1
    @var firstPosition = targetBlock.getLocation()
@else
    # Kinda hacky
    @var selection.addCuboidToSelection(firstPosition, targetBlock.getLocation())
    @var selectionPosition = 0
@fi

@var teraRabbitsUtils::log("Set Position {{teraRabbitsTools::selectionPosition}}")